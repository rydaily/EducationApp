<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ryan.testapplications.JoinClass"
    android:background="@color/material_blue_grey_900">

    <TextView
        android:text="Join Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/course"
        android:layout_marginTop="35dp"
        android:text="Course ID"
        android:textColor="#ffffffff"
        android:layout_below="@+id/instName"
        android:layout_alignLeft="@+id/section"
        android:layout_alignStart="@+id/section" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instName"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:inputType="number"
        android:text="Course Code"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/course"
        android:layout_alignEnd="@+id/course"
        android:layout_alignLeft="@+id/course"
        android:layout_alignStart="@+id/course" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/section"
        android:layout_below="@+id/course"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Section Number"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submitInfo"
        android:id="@+id/button10"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/section"
        android:layout_centerHorizontal="true"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff" />
</RelativeLayout>
