<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ryan.testapplications.MyClassList"
    android:background="@color/material_blue_grey_900">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 1"
        android:onClick = "gotoClass"
        android:id="@+id/button1"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 2"
        android:onClick = "gotoClass"
        android:id="@+id/button2"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="My Classes"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:editable="false"
        android:clickable="true"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 3"
        android:onClick="gotoClass"
        android:id="@+id/button3"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 5"
        android:onClick="gotoClass"
        android:id="@+id/button5"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 4"
        android:onClick="gotoClass"
        android:id="@+id/button4"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 6"
        android:onClick="gotoClass"
        android:id="@+id/button6"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

</RelativeLayout>
