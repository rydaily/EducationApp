<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/material_blue_grey_900">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Classes"
        android:onClick="myClasses"
        android:id="@+id/btnShowMsg"
        android:layout_marginTop="74dp"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Class"
        android:onClick="joinClass"
        android:layout_marginTop="50dp"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff"
        android:id="@+id/button"
        android:layout_below="@+id/btnShowMsg"
        android:layout_centerHorizontal="true" />
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnShowMsg"
        android:layout_alignEnd="@+id/btnShowMsg"
        android:layout_alignLeft="@+id/btnShowMsg"
        android:layout_alignStart="@+id/btnShowMsg"
        android:background="@color/secondary_text_disabled_material_dark"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="42dp"
        android:text="Education App"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:clickable="true" />

</RelativeLayout>
